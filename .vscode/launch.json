    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["ts-node", "src/server.ts"],
            "name": "run",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["ts-node", "./node_modules/.bin/jest"],
            "name": "tests",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["ts-node", "--inspect-brk", "./node_modules/.bin/jest", "--watch"],

            "name": "debug tests",
            "console": "integratedTerminal"
        }
    ]
}
