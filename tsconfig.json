{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@test/*": ["test/*"],
            "@resources/*": ["resources/*"],
            "@database/*": ["prisma/*"]
        },
        "outDir": "dist",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "dist"]
}
